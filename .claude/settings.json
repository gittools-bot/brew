{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./bin/brew style --changed --fix"
          },
          {
            "type": "command",
            "command": "./bin/brew typecheck"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "changed=$(git diff --name-only main...HEAD); [ -z \"$changed\" ] || ./bin/brew tests --changed",
            "timeout": 360
          }
        ]
      }
    ]
  }
}
